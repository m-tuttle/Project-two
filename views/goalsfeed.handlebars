<div id="feedGoals">
    {{#each goals}}
        <div class="row"> 
                    <div class="col s2"></div>
                        <div class="card-panel col s8">
                            <div class="row">
                                    <img class="materialboxed" src="http://via.placeholder.com/120x120" id="info">
                            <p style="float: left">
                                <ul>
                                    <li><i><span id="username">{{user}}</span></i></li>
                                    <li><span id="goal">{{goal_text}}</span></li><br>
                                    <li><i>About <span id="endDate">20 minutes </span>remaining</i></li>
                                </ul>
                            </p>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                <button class="btn modal-trigger" data-target="modal1" id="mdl1" style="margin-left: 8%">Stake</button>
                                </div>
                                <div class="col s4">
                                <p><i>60 credits remaining</i></p>
                                </div>
                                <div class="col s4">
                                <button class="btn" style="float:right"><span id="follow"> Follow</span></button>
                                </div>
                            </div>
                        </div>
                    <div class="col s2"></div>
                </div>
    {{/each}}


    <!-- modals -->

  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Are you sure?</h4>
      <div class="row">
            <a href="https://placeholder.com"><img src="http://via.placeholder.com/120x120" id="info"></a>
            <p style="float: left">
                <ul>
                    <li><i><span id="username">mike846</span></i></li>
                    <li><span id="goal">Raise $10,000 for charity.</span></li><br>
                    <li><b>Stake Amount: 10</b></li>
                    <li><b>Your balance: 500</b></li>
                    
                </ul>
            </p>
        </div>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat" onclick="Materialize.toast('Stake successfully placed', 4000)">Stake</a>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
    </div>
  </div>


      <!-- Element Showed -->

  <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
        <a id="menu" class="btn btn-floating btn-large teal"  onclick="$('.tap-target').tapTarget('open')"><i class="material-icons">menu</i></a>
      </div>

  <!-- Tap Target Structure -->
  <div class="tap-target teal" data-activates="menu">
    <div class="tap-target-content white-text">
      <h5>Your Balance</h5>
      <h6>500</h6>
      <br>
      <h5>Recently Followed</h5>
      <button class="btn white black-text" id="mid">User 1 Stake 1</button>
      <button class="btn white black-text" id="mid">User 2 Stake 1</button>
      <button class="btn white black-text" id="mid">User 3 Stake 1</button>
      <p></p>
    </div>
  </div>

   