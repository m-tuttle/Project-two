<div class="container">
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Prove It. Profit.</span>

                </div>
                <div class="card-action">
                    <form action="/userlogin" method="POST">
                        <input placeholder="ENTER USER NAME" id="username" type="text" class="validate" name="user">
                        <label for="username">User Name</label>
                        <br>
                        <input placeholder="ENTER PASSWORD" id="password" type="password" class="validate" name="user_pw">
                        <label for="password">Password</label>
                        <br>
                        <button type="submit" class="waves-effect waves-light btn" id="submit">Log In </button>
                        <br>
                        <br>
                        <a href="/newuser">Create an Account!</a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>